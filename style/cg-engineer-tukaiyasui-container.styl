#cg-engineer-tukaiyasui-container
  position absolute
  top 0
  left 0
  height 100%
  width 100%
  z-index 4

  > div
    position absolute
    z-index 4
    top 50%
    left 50%
    font-size 6vh
    transform translate(-50%, -50%)
    padding 5% 5%
    background-color #d23881
    color #f9efd5
    white-space nowrap
    z-index 2
    box-shadow 0 3px 30px 0 rgba(0, 0, 0, 0.7)
    font-weight bold
    text-align center
