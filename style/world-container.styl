@import 'partials/button'

#world-container
  position absolute
  height calc(100% - 300px);
  width 100%
  top 310px

  .run
    position absolute
    top -70px

    button(#381794, #f9efd5)
    font-size 20px

  .wrap
    position relative
    height 100%
    width 100%

    > div
      position absolute
      height calc(100% - 40px)
      width calc(100% - 80px)

    .xml
      left 40px

    .js
      left calc(100% + 40px)

    .editor
      height 100%
      width 100%
