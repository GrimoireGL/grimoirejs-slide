@Pass {
  @Disable(BLEND)
  @Disable(DEPTH_TEST)
  FS_PREC(mediump,float)

  varying vec2 vTexCoord;

  #ifdef VS
    attribute vec3 position;
    attribute vec2 texCoord;
    void main(){
      gl_Position = vec4(position, 1.);
      vTexCoord = texCoord;
    }
  #endif

  #ifdef FS
    uniform sampler2D current;
    uniform sampler2D previous;
    uniform float progress;

    void main() {
      if (vTexCoord.x < 1. - progress) {
        gl_FragColor = texture2D(previous, vec2(vTexCoord.x + progress, vTexCoord.y));
      } else {
        gl_FragColor = texture2D(current, vTexCoord);
      }
    }
  #endif
}
